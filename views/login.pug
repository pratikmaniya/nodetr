extends layout

block content
    h1 Login
    form(method='POST', action='/users/login')
        #form-group
            label Username:
            input.form-control(name='username', type='text')
            br
        #form-group
            label Password:
            input.form-control(name='password', type='password')
            br
        input.btn.btn-primary(type='submit', value='Submit')    
    
        a.btn.btn-primary(href='/auth/facebook', style='margin-left:3px', disabled='')
            span.fa.fa-facebook  
            |   Login with Facebook

        a.btn.btn-danger(href='/auth/google' style='margin-left:3px')
            span.fa.fa-google-plus  
            |   Login with google