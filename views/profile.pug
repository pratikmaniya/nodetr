doctype html

html
    head
        title Login
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
        style.
            body 		{ padding-top:80px; word-wrap:break-word; }
            #logout {margin-left: 15px}

    body
        .container
            .page-header.text-center
                h1
                    span.fa.fa-anchor
                    |  Profile Page
                a.btn.btn-default.btn-sm(href='/') Home
                a.btn.btn-default.btn-sm(href='/users/logout', id='logout') Logout
            .row
                // LOCAL INFORMATION
                .col-sm-6
                    .well
                        h3
                            span.fa.fa-user
                            |  Local
                        p
                            strong name
                            | : #{user.local.name}
                            br
                            strong username
                            | : #{user.local.username}
                            br
                            strong email
                            | : #{user.local.email}
                        
                // GOOGLE INFORMATION
                .col-sm-6
                    .well
                        h3.text-danger
                            span.fa.fa-google-plus
                            |  Google
                        p
                            strong name
                            | : #{user.google.name}
                            br
                            strong email
                            | : #{user.google.email}