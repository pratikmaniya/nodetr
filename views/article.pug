extends layout

block content
    h1= article.title
    h5
        b Written by #{author}
    br
    p= article.body
    if user 
        if user.id == article.author
            hr 
            a.btn.btn-default(href='/articles/edit/'+article._id) Edit
            span
            a.btn.btn-danger.delete-article(style='margin-left: 20px' href='#', data-id=article._id) Delete